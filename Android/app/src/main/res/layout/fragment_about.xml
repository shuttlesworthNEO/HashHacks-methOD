    <!--Piyush-->

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/Widget.CardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="@dimen/imagewidth"
                android:layout_height="@dimen/imageheight"
                android:src="@drawable/piyush0" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:textSize="@dimen/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Piyush Ajmani"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@drawable/github"
                        android:layout_width="@dimen/githubimagewidth"
                        android:layout_height="@dimen/githubimageheight" />

                    <TextView
                        android:textSize="@dimen/githubPro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/piyush0" />


                </LinearLayout>

                <TextView
                    android:textSize="@dimen/designation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android developer" />

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>


